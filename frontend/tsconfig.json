{
  "compilerOptions": {
    // Setup aliases for paths
    "jsx": "preserve",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@context/*": ["src/context/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/hooks/*"],
    }
  },
  "include": ["src"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
